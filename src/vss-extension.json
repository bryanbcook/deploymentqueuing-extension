{
    "manifestVersion": 1,
    "id": "deploymentqueuingdecorator",
    "name": "YAML Deployment Queuing",
    "version": "0.0.1",
    "publisher": "bcook",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Emulates the deployment queuing capabilities of Classic Release pipelines in multi-stage YAML pipelines",
    "categories": [
        "Azure Pipelines"
    ],
    "tags": [
        "Yaml",
        "Continuous Integration",
        "Continuous Delivery",
        "Approvals",
        "Checks",
        "Gates",
        "Queue",
        "Multi-Stage",
        "Deployment"
    ],
    "icons": {
        "default": "icon.png"        
    },
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "files": [
        {
            "path": "deployment-queuing.yml",
            "addressable": true,
            "contentType": "text/plain"
        },
        {
            "path": "img",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "deploymentqueuing-decorator",
            "type": "ms.azure-pipelines.pipeline-decorator",
            "targets": [
                "ms.azure-pipelines-agent-job.post-job-tasks"
            ],
            "properties": {
                "template": "deployment-queuing.yml"
            }
        }
    ]
}